<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#40000000" /> <!-- Cor da sombra -->
            <corners android:radius="3dp" /> <!-- Arredondamento dos cantos -->
            <padding
                android:bottom="2dp" /><!-- Profundidade da sombra -->
            android:right="2dp" />
        </shape>
    </item>
    <!-- Botão -->
    <item android:bottom="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/holo_orange_light" /> <!-- Cor do botão -->
            <corners android:radius="3dp" /> <!-- Arredondamento dos cantos -->
        </shape>
    </item>
</layer-list>
