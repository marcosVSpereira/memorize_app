<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <!-- Sombra externa -->
                    <solid android:color="#F8EDED"/> <!-- Cor da sombra -->
                    <corners android:radius="48dp"/> <!-- Raio ligeiramente maior para criar o efeito de sombra -->
                </shape>
            </item>
            <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#D0C4E0F4"/>
                    <corners android:radius="50dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <!-- Sombra externa -->
                    <solid android:color="#F8EDED"/> <!-- Cor da sombra -->
                    <corners android:radius="48dp"/> <!-- Raio ligeiramente maior para criar o efeito de sombra -->
                </shape>
            </item>
            <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#FFFFFF"/>
                    <corners android:radius="50dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
